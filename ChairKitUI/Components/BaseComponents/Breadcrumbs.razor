<style>
     .mud-breadcrumb-item {
         font-size: 90% !important;
     }

         .mud-breadcrumb-item .svg {
             font-size: 12px;
         }
</style>

<MudBreadcrumbs Items="Items">
    <SeparatorTemplate>
        <MudIcon Icon="@SeparatorIcon" Size="Size.Medium" />
    </SeparatorTemplate>
</MudBreadcrumbs>

@code {
    [Parameter] public List<BreadcrumbItem> Items { get; set; } = new();
    [Parameter] public string SeparatorIcon { get; set; } = Icons.Material.Filled.ArrowRight;
}
